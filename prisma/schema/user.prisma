model User {
    id   Int  @id @default(autoincrement())
    role Role

    firstName String
    lastName  String
    mail      String  @unique
    verified  Boolean @default(false)
    password  String
    age       Int?
    genre     String?
    phone     Int?

    tokens Token[]

    enterpriseId Int
    enterprise   Enterprise @relation(fields: [enterpriseId], references: [id])

    material   Material?

    events    Event[]
    createdAt DateTime @default(now())
}

enum Role {
    ADMIN
    RESPONSABLE
    EMPLOYEE
}
