{% extends "../layouts/base.html.twig" %}

{% block title %}
<title>Organis | Connexion</title>
{% endblock %}

{% block desc %}
<meta name="description" content="La solution, pour votre entreprise.">
{% endblock %}

{% block style %}
<link rel="stylesheet" href="/styles/connect.css">
{% endblock %}

{% block main %}
<main>
    <section>
        <h1>Connexion:</h1>
        <form action="/login" method="post">
            <div class="input-container">
                <input type="email" name="mail" id="mail" placeholder="">
                <label for="mail">E-mail:</label>
            </div>
            <div class="input-container">
                <input type="password" name="password" id="password" placeholder="">
                <label for="password">Mot de passe:</label>
            </div>
            <div class="save-login">
                <label for="save">Rester connecté</label>
                <input type="checkbox" name="save" id="save">
            </div>
            {% if error %}
            <p class="error-message">{{ error }}</p>
            {% endif %}
            <div class="form-btns">
                <a href="/forgotpassword">Mot de passe oublié</a>
                <button type="submit" class="btn bgm">Se connecter</button>
            </div>
        </form>
    </section>
</main>
{% endblock %}