{% extends "../../layouts/base.html.twig" %}

{% block title %}
<title>Organis | Dashboard</title>
{% endblock %}

{% block desc %}
<meta name="description" content="La solution, pour votre entreprise.">
{% endblock %}

{% block style %}
<link rel="stylesheet" href="/styles/connect.css">
{% endblock %}

{% block main %}
<main>
    <section>
        <h1>Nouveau membre:</h1>
        <form action="/add/user" method="post">
            <div class="input-container">
                <input type="email" name="mail" id="mail" placeholder="">
                <label for="mail">E-mail:</label>
            </div>
            <div class="input-container">
                <input type="text" name="lastName" id="lastName" placeholder="">
                <label for="lastName">Nom:</label>
            </div>
            <div class="input-container">
                <input type="text" name="firstName" id="firstName" placeholder="">
                <label for="firstName">Prenom:</label>
            </div>
            {% if error %}
            <p class="error-message">{{ error }}</p>
            {% endif %}
            
            <div class="form-btns">
                <a href="/" class="btn bgs">Retour</a>
                <button type="submit" class="btn bgm">Ajouter</button>
            </div>
        </form>
    </section>
</main>
{% endblock %}